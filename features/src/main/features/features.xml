<features name="odl-usecplugin-${project.version}" xmlns="http://karaf.apache.org/xmlns/features/v1.2.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://karaf.apache.org/xmlns/features/v1.2.0 http://karaf.apache.org/xmlns/features/v1.2.0">
  <repository>mvn:org.opendaylight.yangtools/features-yangtools/{{VERSION}}/xml/features</repository>
  <repository>mvn:org.opendaylight.controller/features-mdsal/{{VERSION}}/xml/features</repository>
  <repository>mvn:org.opendaylight.mdsal.model/features-mdsal-model/{{VERSION}}/xml/features</repository>
  <repository>mvn:org.opendaylight.netconf/features-restconf/{{VERSION}}/xml/features</repository>
  <repository>mvn:org.opendaylight.dlux/features-dlux/{{VERSION}}/xml/features</repository>
  <repository>mvn:org.opendaylight.openflowplugin/features-openflowplugin/0.3.0-SNAPSHOT/xml/features</repository>
  <repository>mvn:org.opendaylight.openflowjava/features-openflowjava/0.8.0-SNAPSHOT/xml/features</repository>
  <repository>mvn:org.opendaylight.sdninterfaceapp/features-sdninterfaceapp/1.7.0-SNAPSHOT/xml/features</repository>
  <feature name='odl-usecplugin-api' version='${project.version}' description='OpenDaylight :: usecplugin-api :: Common APIs for usecplugin-aaa and usecplugin-openflow'>
  <feature version='${mdsal.model.version}'>odl-mdsal-models</feature>
  <feature version='${mdsal.version}'>odl-mdsal-broker</feature>
  <bundle>mvn:org.osgi/org.osgi.service.event/1.3.1</bundle>
  <bundle>mvn:org.opendaylight.usecplugin/usecplugin-api/${project.version}</bundle>
  </feature>

  <feature name='odl-usecplugin-openflow' version='${project.version}' description='OpenDaylight :: usecplugin-openflow :: Attack Info with OpenFlow Packet_In'>
  <feature version='${project.version}'>odl-usecplugin-api</feature>
  <feature version='0.3.0-SNAPSHOT'>odl-openflowplugin-all</feature>
  <bundle>mvn:org.opendaylight.controller/blueprint/0.5.0-SNAPSHOT</bundle>
  <bundle>mvn:org.opendaylight.usecplugin/usecplugin-openflow-impl/${project.version}</bundle>
  <configfile finalname="${configfile.directory}/usecplugin-openflow.xml">mvn:org.opendaylight.usecplugin/usecplugin-openflow-impl/${project.version}/xml/config</configfile>
  </feature>

  <feature name='odl-usecplugin-aaa' version='${project.version}' description='OpenDaylight :: usecplugin-aaa :: Attack Info with AAA Authentication'>
  <feature version='${project.version}'>odl-usecplugin-api</feature>
  <bundle>mvn:org.opendaylight.usecplugin/usecplugin-aaa-impl/${project.version}</bundle>
  <configfile finalname="${configfile.directory}/usecplugin-aaa.xml">mvn:org.opendaylight.usecplugin/usecplugin-aaa-impl/${project.version}/xml/config</configfile>
  </feature>
    
  <feature name='odl-usecplugin-sdni' version='${project.version}' description='OpenDaylight :: usecplugin-sdni :: Attack Info with SDNi Peer Attack'>
  <feature version='${project.version}'>odl-usecplugin-api</feature>
  <!--feature version='1.7.0-SNAPSHOT'>odl-sdninterfaceapp-all</feature-->
  </feature>

  <feature name='odl-usecplugin-all' version='${project.version}' description='OpenDaylight :: usecplugin-sdni :: Attack Info with SDNi Peer Attack'>
  <feature version='${project.version}'>odl-usecplugin-aaa</feature>
  <feature version='${project.version}'>odl-usecplugin-openflow</feature>
  <feature version='${project.version}'>odl-usecplugin-sdni</feature>
  </feature>

</features>
