<features name="odl-usecplugin-${project.version}" xmlns="http://karaf.apache.org/xmlns/features/v1.2.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://karaf.apache.org/xmlns/features/v1.2.0 http://karaf.apache.org/xmlns/features/v1.2.0">
  <repository>mvn:org.opendaylight.yangtools/features-yangtools/${yangtools.version}/xml/features</repository>
  <repository>mvn:org.opendaylight.controller/features-mdsal/${mdsal.version}/xml/features</repository>
  <repository>mvn:org.opendaylight.controller/features-restconf/${mdsal.version}/xml/features</repository>
  <repository>mvn:org.opendaylight.openflowplugin/features-openflowplugin/${openflowplugin.version}/xml/features</repository>  
  
  <feature name='odl-usecplugin-api' version='${project.version}' description='OpenDaylight :: usecplugin :: api'>
    <feature version='${yangtools.version}'>odl-mdsal-models</feature>
    <bundle>mvn:org.opendaylight.usecplugin/usecplugin-api/${project.version}</bundle>
  </feature>
  <feature name='odl-usecplugin' version='${project.version}' description='OpenDaylight :: usecplugin'>
    <feature version='${mdsal.version}'>odl-mdsal-broker</feature>
    <feature version='${openflowplugin.version}'>odl-openflowplugin-all</feature>
    <feature version='${project.version}'>odl-usecplugin-api</feature>
    <bundle>mvn:org.opendaylight.usecplugin/usecplugin-impl/${project.version}</bundle>
    <configfile finalname="${configfile.directory}/usecplugin.xml">mvn:org.opendaylight.usecplugin/usecplugin-impl/${project.version}/xml/config</configfile>
  </feature>
  <feature name='odl-usecplugin-rest' version='${project.version}' description='OpenDaylight :: usecplugin :: REST'>
    <feature version="${project.version}">odl-usecplugin</feature>
    <feature version="${mdsal.version}">odl-restconf</feature>
  </feature>
  <feature name='odl-usecplugin-ui' version='${project.version}' description='OpenDaylight :: usecplugin :: UI'>
    <feature version="${project.version}">odl-usecplugin-rest</feature>
    <feature version="${mdsal.version}">odl-mdsal-apidocs</feature>
    <feature version="${mdsal.version}">odl-mdsal-xsql</feature>
  </feature>

</features>
